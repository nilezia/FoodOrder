<ProgressBar
    android:id="@+id/progressLogin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:visibility="gone"
    />
</LinearLayout>
